{
  "name": "secret-messages",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "postinstall": "prisma generate",
    "build": "remix vite:build",
    "dev:vite": "remix vite:dev --host --open",
    "dev": "concurrently 'npm:dev:db' 'npm:dev:vite' --kill-others",
    "dev:db": "docker-compose up",
    "format": "prettier --write .",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "preview": "remix-serve ./build/server/index.js",
    "start": "NODE_OPTIONS='--import ./instrumentation.server.mjs' remix-serve ./build/server/index.js",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@fontsource-variable/inter": "^5.0.21",
    "@phosphor-icons/react": "^2.1.7",
    "@prisma/client": "^5.19.1",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@remix-run/node": "^2.11.2",
    "@remix-run/react": "^2.11.2",
    "@remix-run/serve": "^2.11.2",
    "@sentry/remix": "^8.28.0",
    "@sentry/vite-plugin": "^2.22.4",
    "@vercel/analytics": "^1.3.1",
    "@vercel/remix": "^2.11.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "isbot": "^5.1.17",
    "lucide-react": "^0.439.0",
    "luxon": "^3.5.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "short-uuid": "^5.2.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "tiny-invariant": "^1.3.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.11.2",
    "@types/luxon": "^3.4.2",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.0",
    "eslint": "^9.10.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-react": "^7.35.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "postcss": "^8.4.45",
    "prettier": "^3.3.3",
    "prettier-plugin-classnames": "^0.7.2",
    "prettier-plugin-merge": "^0.7.1",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "prisma": "^5.19.1",
    "tailwind-scrollbar": "^3.1.0",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "vite": "^5.4.3",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
