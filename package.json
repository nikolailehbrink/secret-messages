{
  "private": true,
  "name": "secret-messages",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "postinstall": "prisma generate",
    "build": "react-router build",
    "dev:react-router": "react-router dev",
    "dev": "concurrently 'pnpm:dev:db' 'pnpm:dev:react-router' --kill-others",
    "dev:db": "docker compose up",
    "init:db": "prisma db push",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:inspect": "eslint --inspect-config",
    "start": "dotenv react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "studio": "prisma studio",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "clean": "rm -rf node_modules"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@fontsource-variable/inter": "^5.2.6",
    "@phosphor-icons/react": "^2.1.10",
    "@prisma/client": "^6.10.1",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@react-router/node": "^7.6.2",
    "@react-router/serve": "^7.6.2",
    "@types/luxon": "^3.6.2",
    "@vercel/analytics": "^1.5.0",
    "@vercel/react-router": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "isbot": "^5.1.28",
    "lucide-react": "^0.523.0",
    "luxon": "^3.6.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.6.2",
    "short-uuid": "^5.2.0",
    "tailwind-merge": "^3.3.1",
    "vite-plugin-devtools-json": "^0.2.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.0",
    "@eslint/js": "^9.29.0",
    "@react-router/dev": "^7.6.2",
    "@tailwindcss/vite": "^4.1.10",
    "@types/node": "^22.15.33",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "concurrently": "^9.2.0",
    "eslint": "^9.29.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "prettier": "^3.5.3",
    "prettier-plugin-classnames": "^0.7.9",
    "prettier-plugin-merge": "^0.7.4",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "prisma": "^6.10.1",
    "tailwindcss": "^4.1.10",
    "tsx": "^4.20.3",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": "22.x"
  }
}
